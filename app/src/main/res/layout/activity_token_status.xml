<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TokenStatus">

    <include
        android:id="@+id/include"
        layout="@layout/myappbar" />

    <TextView
        android:id="@+id/timingTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="#F3CFF1D0"
        android:text="OPEN"
        android:textAlignment="center"
        android:textColor="#286C2B"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#DFFADEDE"
        android:paddingTop="10dp"
        android:text="TOKEN NUMBER"
        android:textAlignment="center"
        android:textColor="#0C0C0C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timingTV" />

    <TextView
        android:id="@+id/counterTV"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#DFFADEDE"
        android:text="102"
        android:textAlignment="center"
        android:textColor="#CC1414"
        android:textSize="75dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <androidx.appcompat.widget.LinearLayoutCompat

        app:layout_constraintTop_toBottomOf="@id/counterTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/myLinear"
        android:gravity="center">


        <TextView
            android:id="@+id/yourTokenText"
            android:layout_width="wrap_content"
            android:paddingHorizontal="5dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#E3F6D5"
            android:text="Your Token"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/oneTimeText"
            android:layout_width="wrap_content"
            android:paddingHorizontal="5dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#E3F6D5"
            android:text="Estimated Time"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/estimatedText"
            app:layout_constraintStart_toEndOf="@+id/yourTokenText" />

        <TextView
            android:id="@+id/estimatedText"
            android:layout_width="wrap_content"
            android:paddingHorizontal="5dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#E3F6D5"
            android:text="One Token Time"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.appcompat.widget.LinearLayoutCompat>


    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Notifications:"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myLinear" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:text="Date: 31/5/2020  Day: Sunday"
        android:textAlignment="textEnd"
        android:textColor="#FD4747"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/myLinear" />

    <TextView
        android:id="@+id/notesTV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/myToken"
        android:layout_width="63dp"
        android:layout_height="41dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="7dp"
        android:text="100"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@id/myLinear"
        app:layout_constraintStart_toStartOf="@id/myLinear"
        app:layout_constraintTop_toTopOf="@id/myLinear" />

    <TextView
        android:id="@+id/myEstimate"
        android:layout_width="91dp"
        android:layout_height="41dp"
        android:layout_marginStart="142dp"
        android:layout_marginTop="7dp"
        android:text="100 hh"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@id/myLinear"
        app:layout_constraintStart_toStartOf="@+id/myLinear"
        app:layout_constraintTop_toTopOf="@id/myLinear" />

    <TextView
        android:id="@+id/myOneToken"
        android:layout_width="100dp"
        android:layout_height="41dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="51dp"
        android:text="38 min"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@id/myLinear"
        app:layout_constraintEnd_toEndOf="@+id/myLinear"
        app:layout_constraintTop_toTopOf="@id/myLinear" />

    <TextView
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="55dp"
        android:text="edit"
        android:textColor="#589FF6"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/myLinear"
        app:layout_constraintStart_toStartOf="@id/myLinear"
        app:layout_constraintTop_toTopOf="@id/myLinear" />


</androidx.constraintlayout.widget.ConstraintLayout>